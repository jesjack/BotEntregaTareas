<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.citas_java.LoadingModalController"
            stylesheets="@loading-modal.css"
            alignment="CENTER" spacing="20.0"
            prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Cargando..." fx:id="prompt" />

    <ProgressBar fx:id="progressBar" prefWidth="5000.0" progress="0.0">
        <VBox.margin>
            <Insets top="3.0" />
        </VBox.margin>
    </ProgressBar>

    <VBox alignment="CENTER" spacing="20.0" fx:id="buttonContainer"/>

</VBox>
